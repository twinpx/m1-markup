.b-ph

  &-block
    position relative
    
  &-news
    display flex
    justify-content space-between
    flex-wrap wrap
    margin-bottom -1.5rem
    
    &-item
      padding-top calc( (100% - 1.5rem * 2) / 3 * .64 )
      transition( opacity .5s ease )
      width calc( (100% - 1.5rem * 2) / 3 )
      margin-bottom 1.5rem
      background-color $placeholder-color
      
      @media( max-width 991px )
        padding-top calc( (100% - 1.5rem) / 2 * .64 )
        width calc( (100% - 1.5rem) / 2 )
        
        &:nth-child(5),
        &:nth-child(6)
          display none
      
      @media( max-width 767px )
        padding-top 64%
        width 100%
        
        &:nth-child(3),
        &:nth-child(4),
        &:nth-child(5),
        &:nth-child(6)
          display none
        
  &-content
    position absolute
    top 0
    left 0
    width 100%
    transition( opacity .5s ease )
    opacity 0
    z-index 0