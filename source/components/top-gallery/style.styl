@import '../../styl/component-include.styl'

.b-top-gallery
  
  &__item
    background-repeat no-repeat
    background-position center
    background-size cover
    color #fff
    height 100%
    padding-top 100px
    position relative
    
    @media( max-width 600px )
      padding-top 50px
      padding-right 20px
      padding-left 20px
      
  .fotorama__nav-wrap
    display none
    
  &__text
    height 320px
    
    @media( max-width 600px )
      height 270px
      
  .b-btn
    color #fff
    border-color #fff