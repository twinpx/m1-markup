@import '../../styl/component-include.styl'

.b-top-gallery
  
  &__item
    background-repeat no-repeat
    background-position center
    background-size cover
    color #fff
    height 100%
    padding-top 100px
    position relative
    
    @media( max-width 600px )
      padding-top 50px
      padding-right 20px
      padding-left 20px
    
  &__text
    height 320px
    
    @media( max-width 600px )
      height 270px
      
  .b-btn
    color #fff
    border-color #fff
    
  .fotorama__arr
    margin-top -30px

    &.fotorama__arr--prev
      background url("/upload/images/arrow-left.svg") no-repeat center
      background-size cover
      width 60px
      height 60px
      margin-left 30px

    &.fotorama__arr--next
      background url("/upload/images/arrow-right.svg") no-repeat center
      background-size cover
      width 60px
      height 60px
      margin-right 30px

    @media ( max-width 767px )
      display none !important

  .fotorama__nav-wrap
    position relative

  .fotorama__nav
    position absolute
    bottom 40px
    left 0
    width 100%
    height 30px

  @media ( max-width 767px )
    bottom 10px

  .fotorama__dot
    width 0
    height 0
    border-width 5px
    border-color #7f7f7f
    background-color #7f7f7f

  .fotorama__nav__frame.fotorama__active .fotorama__dot
    width 0
    height 0
    border-width 5px
    border-color #f33
    background-color #f33